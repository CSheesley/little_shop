<h1>My Reviews</h1></br>

<% @reviews.each do |review| %>

<section id="my-reviews-<%= review.id %>">

  <h4> <%= review.item_reviewed.name %> </h4>
  <p>Review Title: <%= review.title %></p>
  <p>Rating: <%= review.rating %></p>
  <p>Description: <%= review.description %></p>
  <p>Created/Updated: <%= review.updated_at.strftime("%m/%d/%y") %></p>
  <p><%= link_to "Edit", edit_profile_review_path(review) %> - <%= link_to "Delete", profile_review_path(review), method: :delete %></p>

</section>
<% end %>
